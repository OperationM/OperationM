<%= content_tag :div, :class => "control-group" do %>
  <%= label_tag "upload", "Upload File", :class => "control-label" %>
  <%= content_tag :div, :class => "controls" do %>
    <%= file_field "file", "upload" %>
    <%= hidden_field_tag 'movie[video]' %>
    <%= content_tag :div, :class => "progress progress-striped active" do %>
      <%= content_tag :div, "", :id => "progress_number", :class => "bar" %>
    <% end %>
  <% end %>
<% end %>
