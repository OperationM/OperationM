<%= form_for @comment, :remote => true do |f| %>
  <%= content_tag :div, :class => 'controls' do %>
    <%= f.text_area :comment, :rows => "3", :class => "span4 comment-area" %>
    <%= f.hidden_field :movie_id, :value => @movie.id %>
    <%= f.submit "Post", :class => "btn btn-primary comment-post", :id => "post-comment" %>
  <% end %>
<% end %>
